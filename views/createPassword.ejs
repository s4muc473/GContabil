<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Criar Senha - GContabil</title>
    <style>
        body {
            background-color: #f4f6f8;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            /* teste */
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        * {
            box-sizing: border-box;
        }


        .container {
            background-color: #fff;
            padding: 2%;
            border-radius: 1rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #333;
        }

        input[type="password"] {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
            font-size: 1rem;
        }

        button {
            width: 100%;
            padding: 0.75rem;
            background-color: #000000;
            color: white;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #f4d41e;
        }

        .mensagem {
            text-align: center;
            margin-top: 1rem;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Criar Senha</h2>
        <input type="password" id="senha" placeholder="Digite sua senha" />
        <button onclick="criarUsuario()">Criar Conta</button>
        <div class="mensagem" id="mensagem"></div>
    </div>

    <script>
        const url = 'https://g-contabil.vercel.app/api/create';

        async function criarUsuario() {
            const senha = document.getElementById('senha').value;
            const mensagemDiv = document.getElementById('mensagem');

            if (!senha) {
                mensagemDiv.textContent = 'Por favor, digite uma senha.';
                mensagemDiv.style.color = 'red';
                return;
            }

            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ password: senha })
                });

                if (response.ok) {
                    mensagemDiv.textContent = 'Usuário criado com sucesso!';
                    mensagemDiv.style.color = 'green';
                    document.getElementById('senha').value = '';
                } else {
                    const erro = await response.json();
                    mensagemDiv.textContent = erro.message || 'Erro ao criar usuário.';
                    mensagemDiv.style.color = 'red';
                }
            } catch (error) {
                mensagemDiv.textContent = 'Erro de conexão com o servidor.';
                console.log(error)
                mensagemDiv.style.color = 'red';
            }
        }
    </script>
</body>
</html>